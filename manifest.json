{
  "manifest_version": 3,
  "name": "NHL.TV Control Bar Hider",
  "version": "1.1",
  "description": "Hides the control bar and overlay to avoid spoilers.",
  "permissions": [
    "activeTab", "storage", "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["*://nhltv.nhl.com/*"],
      "js": ["content.js"]
    }
  ]
}