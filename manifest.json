{
  "manifest_version": 3,
  "name": "NHL.TV Spoiler Blocker",
  "version": "1.3",
  "description": "Hides a bunch of things that may spoil NHL games during viewing.",
  "icons": {
    "16": "icons/logo16.png",
    "48": "icons/logo48.png",
    "128": "icons/logo128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/logo16.png",
      "48": "icons/logo48.png",
      "128": "icons/logo128.png"
    }
  },
  "host_permissions": [
    "*://nhltv.nhl.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://nhltv.nhl.com/*"],
      "js": ["content.js"]
    }
  ]
}