{
  "manifest_version": 4,
  "name": "NHL.TV Spoiler Blocker",
  "version": "1.2",
  "description": "Hides a bunch of things that may spoil NHL games during viewing.",
  "icons": {
    "16": "icons/logo16.png",
    "48": "icons/logo48.png",
    "128": "icons/logo128.png"
  },
   "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/logo16.png",
      "48": "icons/logo48.png",
      "128": "icons/logo128.png"
    }
  },
  "permissions": [
    "activeTab", "storage", "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["*://nhltv.nhl.com/*"],
      "js": ["content.js"]
    }
  ]
}